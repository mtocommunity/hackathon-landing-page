---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Hackathon 2025 | MTO x Mantaro",
  description = "Una hackathon presencial organizada por Many To One Community junto a Mantaro Systems.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://mtocommunity.com/favicon-32x32.png"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Hackathon, Hackathon UTP, Hackathon Chiclayo, Hackathon PerÃº, MTO, UTP, many to one, Chiclayo, Comunidad, Mantaro Systems"
    />
    <meta name="author" content="Many To One Community and Mantaro Systems" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-grow mx-auto mt-22 my-2 w-full p-4">
      <div
        class="bg-gradient-to-br from-primary via-tertiary to-secondary p-1 h-full w-full"
      >
        <div
          class="bg-white h-full w-full flex flex-col items-center justify-center"
        >
          <slot />
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import "../styles/globals.css";
</style>
