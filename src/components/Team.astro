---
export interface Props {
    members: { name: string, image: string}[];
}

const {members} = Astro.props;
---

<div class="flex flex-col items-center pt-8">
  <div class="relative w-full mx-5">
    <div class="absolute top-0 left-0 w-1 bg-gradient-to-b from-primary to-transparent h-full"></div>
    <div class="absolute top-0 right-0 w-1 bg-gradient-to-b from-primary to-transparent h-full"></div>

    {members.map((member, index) => (
      <div
        class={`flex items-center mb-12 relative z-10 ${
          index % 2 === 0 ? "pl-12" : "pr-12"
        }`}
      >
        <div
          class={`flex flex-wrap justify-center sm:justify-normal items-center ${index % 2 === 0 ? "sm:ml-16 flex-row-reverse" : "sm:mr-16"} max-w-lg flex-grow`}
        >
          <div
            class="size-20 md:size-24 bg-primary rounded-full flex justify-center items-center mx-4"
          >
            <img
              src={member.image}
              alt={member.name}
              class="size-16 md:size-20 object-cover rounded-full border-3 border-white"
            />
          </div>
          <h3
            class="text-lg font-semibold text-tertiary"
          >
            {member.name}
          </h3>
        </div>
      </div>
    ))}
  </div>
</div>
