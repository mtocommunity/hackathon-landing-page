---
export interface Props {
    content?: string;
}

const { content = '' } = Astro.props;
---
<div class="text-center">
    <h1 class="font-primary font-bold text-2xl md:text-3xl mx-auto">{content}</h1>
    <div class="mt-3 mx-auto rounded-sm h-1 w-3/12 bg-gradient-to-r from-primary via-tertiary to-secondary"></div>
</div>