---
// ===== TIMELINE COMPONENT =====

import type { TimelineEvent } from '../types/retos';

export interface Props {
  events: TimelineEvent[];
  variant?: 'horizontal' | 'vertical' | 'grid';
  showIcons?: boolean;
}

const { 
  events, 
  variant = 'grid',
  showIcons = true 
} = Astro.props;

const timelineClass = `timeline timeline--${variant}`;
---

<section class={timelineClass}>
  <div class="timeline-container">
    {events.map((event, index) => (
      <article 
        class="timeline-item" 
        style={`animation-delay: ${index * 0.1}s`}
        data-timeline-item={event.id}
      >
        <header class="timeline__header">
          <div class="timeline__number">
            {showIcons && event.icon ? event.icon : index + 1}
          </div>
          <div class="timeline__time-info">
            <time class="timeline__time" datetime={event.time}>
              {event.time}
            </time>
            <span class="timeline__hour">
              {event.hour}
            </span>
          </div>
        </header>
        
        <div class="timeline__content">
          <h3 class="timeline__event">
            {event.event}
          </h3>
          {event.description && (
            <p class="timeline__description">
              {event.description}
            </p>
          )}
        </div>
        
        <!-- Progress indicator for vertical timeline -->
        {variant === 'vertical' && index < events.length - 1 && (
          <div class="timeline__connector"></div>
        )}
      </article>
    ))}
  </div>
</section>

<style>
  /* Base Timeline Styles */
  .timeline {
    padding: var(--spacing-8) 0;
  }

  .timeline-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-4);
  }

  /* Grid Layout (Default) */
  .timeline--grid .timeline-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-6);
  }

  /* Vertical Layout */
  .timeline--vertical .timeline-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-8);
    position: relative;
    max-width: 800px;
  }

  .timeline--vertical .timeline-container::before {
    content: '';
    position: absolute;
    left: 30px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--gradient-button);
    border-radius: var(--radius-full);
  }

  .timeline--vertical .timeline-item {
    margin-left: var(--spacing-16);
    position: relative;
  }

  /* Horizontal Layout */
  .timeline--horizontal .timeline-container {
    display: flex;
    gap: var(--spacing-4);
    overflow-x: auto;
    padding-bottom: var(--spacing-4);
    scroll-behavior: smooth;
  }

  .timeline--horizontal .timeline-item {
    min-width: 280px;
    flex-shrink: 0;
  }

  /* Timeline Item Styles */
  .timeline-item {
    background: var(--bg-neumorphic);
    border-radius: var(--radius-neumorphic);
    padding: var(--spacing-6);
    box-shadow: var(--shadow-neumorphism-card);
    transition: all var(--transition-normal);
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.8);
    animation: fadeInUp 0.6s ease-out both;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-button);
    border-radius: var(--radius-neumorphic) var(--radius-neumorphic) 0 0;
  }

  .timeline-item:hover {
    transform: translateY(-4px);
    box-shadow: var(--hover-elevation), var(--glow-blue);
  }

  .timeline-item:nth-child(even):hover {
    box-shadow: var(--hover-elevation), var(--glow-purple);
  }

  .timeline-item:nth-child(3n):hover {
    box-shadow: var(--hover-elevation), var(--glow-pink);
  }

  /* Timeline Header */
  .timeline__header {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-4);
  }

  .timeline__number {
    width: 50px;
    height: 50px;
    background: var(--gradient-button);
    border-radius: var(--radius-neumorphic);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-weight-bold);
    color: white;
    box-shadow: var(--shadow-neumorphism-small);
    font-size: var(--font-size-lg);
    flex-shrink: 0;
    transition: all var(--transition-normal);
  }

  .timeline-item:hover .timeline__number {
    transform: scale(1.1) rotate(5deg);
    box-shadow: var(--shadow-neumorphism-small), var(--glow-blue);
  }

  .timeline__time-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }

  .timeline__time {
    color: var(--accent-blue);
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
  }

  .timeline__hour {
    color: var(--text-muted);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  /* Timeline Content */
  .timeline__content {
    margin-left: var(--spacing-2);
  }

  .timeline__event {
    color: var(--text-primary);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-2);
    font-size: var(--font-size-lg);
    line-height: 1.4;
  }

  .timeline__description {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    line-height: 1.6;
  }

  /* Vertical Timeline Connector */
  .timeline__connector {
    position: absolute;
    left: -var(--spacing-16);
    top: 70px;
    width: 2px;
    height: calc(100% + var(--spacing-8));
    background: var(--gradient-button);
    opacity: 0.3;
  }

  /* Enhanced Vertical Timeline */
  .timeline--vertical .timeline__number {
    position: absolute;
    left: -var(--spacing-20);
    z-index: 2;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .timeline--grid .timeline-container {
      grid-template-columns: 1fr;
    }

    .timeline--vertical .timeline-container::before {
      left: 20px;
    }

    .timeline--vertical .timeline-item {
      margin-left: var(--spacing-12);
    }

    .timeline--vertical .timeline__number {
      left: -var(--spacing-16);
      width: 40px;
      height: 40px;
      font-size: var(--font-size-base);
    }

    .timeline--horizontal .timeline-item {
      min-width: 250px;
    }

    .timeline-item {
      padding: var(--spacing-4);
    }

    .timeline__header {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-3);
    }

    .timeline__time-info {
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .timeline-item {
      padding: var(--spacing-4);
    }

    .timeline__number {
      width: 40px;
      height: 40px;
      font-size: var(--font-size-base);
    }

    .timeline__event {
      font-size: var(--font-size-base);
    }

    .timeline--horizontal {
      padding: 0 var(--spacing-2);
    }

    .timeline--horizontal .timeline-item {
      min-width: 200px;
    }
  }

  /* Scrollbar for horizontal timeline */
  .timeline--horizontal .timeline-container::-webkit-scrollbar {
    height: 6px;
  }

  .timeline--horizontal .timeline-container::-webkit-scrollbar-track {
    background: var(--secondary-bg);
    border-radius: var(--radius-full);
  }

  .timeline--horizontal .timeline-container::-webkit-scrollbar-thumb {
    background: var(--gradient-button);
    border-radius: var(--radius-full);
  }

  /* Animation delays for staggered entrance */
  .timeline-item:nth-child(1) { animation-delay: 0s; }
  .timeline-item:nth-child(2) { animation-delay: 0.1s; }
  .timeline-item:nth-child(3) { animation-delay: 0.2s; }
  .timeline-item:nth-child(4) { animation-delay: 0.3s; }
  .timeline-item:nth-child(5) { animation-delay: 0.4s; }
  .timeline-item:nth-child(6) { animation-delay: 0.5s; }
  .timeline-item:nth-child(7) { animation-delay: 0.6s; }
  .timeline-item:nth-child(8) { animation-delay: 0.7s; }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .timeline-item {
      animation: none;
    }
    
    .timeline__number {
      transition: none;
    }
  }

  /* Focus styles */
  .timeline-item:focus-within {
    outline: 2px solid var(--accent-blue);
    outline-offset: 2px;
  }
</style>
