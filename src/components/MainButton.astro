---
export interface Props {
   name?: string;
   type?: "button" | "submit" | "reset";
   click?: string;
   href?: string;
   download?: boolean;
   target?: string;
}

const {
    name,
    type="button",
    click = '',
    href,
    download=false,
    target
} = Astro.props

const Tag = href ? 'a' : 'button'
---

<Tag
  href={href}
  download={download}
  type={type}
  data-click={click}
  target={target}
  class="p-3 rounded-lg focus:outline-none focus-visible:outline-primary transition-all duration-300 ease-in-out bg-gradient-to-r from-primary via-[#6582CC] to-secondary text-white shadow-md cursor-pointer text-md"
>
  {name}
</Tag>
