<style>
  .hero {
    padding: calc(70px + var(--spacing-3xl)) 0 var(--spacing-3xl);
  }

  .hero__title {
    font-size: var(--font-size-5xl);
    font-weight: 900;
    margin-bottom: var(--spacing-lg);
  }

  .hero__description {
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  .areas, .staff, .process, .values, .contact {
    padding: var(--spacing-3xl) 0;
  }

  .section-title {
    font-size: var(--font-size-4xl);
    font-weight: 800;
    margin-bottom: var(--spacing-lg);
    background: var(--gradient-button);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-description {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto var(--spacing-3xl);
  }

  .areas__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-xl);
  }

  .area-card {
    text-align: center;
    position: relative;
  }

  .area__icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-lg);
  }

  .area__name {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
  }

  .area__description {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .staff__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-xl);
  }

  .staff-card {
    position: relative;
  }

  .staff__header {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  .staff__avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: var(--shadow-button);
    flex-shrink: 0;
  }

  .staff__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: var(--gradient-card);
  }

  .staff__info {
    flex: 1;
  }

  .staff__name {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
  }

  .staff__cargo {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--accent-teal);
    margin-bottom: var(--spacing-xs);
  }

  .staff__area {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
  }

  .staff__bio {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  .staff__especialidades {
    margin-bottom: var(--spacing-lg);
  }

  .staff__especialidades h4 {
    color: var(--text-primary);
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-base);
  }

  .especialidades-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .especialidad-tag {
    background: var(--gradient-button);
    color: var(--text-primary);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    font-weight: 500;
  }

  .staff__social {
    display: flex;
    gap: var(--spacing-sm);
  }

  .social-link {
    width: 36px;
    height: 36px;
    background: var(--gradient-card);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    text-decoration: none;
    transition: var(--transition-fast);
    box-shadow: var(--shadow-button);
  }

  .social-link:hover {
    color: var(--accent-teal);
    transform: translateY(-2px);
  }

  .timeline {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
  }

  .timeline-card {
    position: relative;
  }

  .timeline__header {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .timeline__number {
    width: 50px;
    height: 50px;
    background: var(--gradient-button);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-lg);
    font-weight: 800;
    color: var(--text-primary);
    box-shadow: var(--shadow-button);
    flex-shrink: 0;
  }

  .timeline__period {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--text-primary);
  }

  .timeline__activities {
    list-style: none;
    padding: 0;
  }

  .timeline__activities li {
    color: var(--text-secondary);
    padding: var(--spacing-xs) 0;
    position: relative;
    padding-left: var(--spacing-lg);
  }

  .timeline__activities li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--accent-teal);
    font-weight: bold;
  }

  .values__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
  }

  .value-card {
    text-align: center;
  }

  .value__icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-lg);
  }

  .value__title {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
  }

  .value__description {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .contact__title {
    font-size: var(--font-size-4xl);
    font-weight: 800;
    margin-bottom: var(--spacing-lg);
    background: var(--gradient-button);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .contact__description {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-2xl);
  }

  .contact__actions {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: center;
  }

  /* Iconos de redes sociales */
  .icon-linkedin::before { content: "üíº"; }
  .icon-twitter::before { content: "üê¶"; }
  .icon-github::before { content: "üêô"; }
  .icon-instagram::before { content: "üì∑"; }

  /* Responsive */
  @media (max-width: 768px) {
    .areas__grid {
      grid-template-columns: 1fr;
    }

    .staff__grid {
      grid-template-columns: 1fr;
    }

    .staff__header {
      flex-direction: column;
      text-align: center;
    }

    .staff__avatar {
      margin: 0 auto;
    }

    .timeline {
      grid-template-columns: 1fr;
    }

    .values__grid {
      grid-template-columns: 1fr;
    }

    .contact__actions {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .staff__grid {
      grid-template-columns: 1fr;
    }

    .timeline__header {
      flex-direction: column;
      text-align: center;
    }

    .timeline__number {
      margin-bottom: var(--spacing-sm);
    }
  }
</style>
