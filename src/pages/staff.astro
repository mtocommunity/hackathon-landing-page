              <div class="staff__header">
                <div class="staff__avatar">
                  <img 
                    src={member.imagen} 
                    alt={`${member.nombre} ${member.apellidos}`}
                    onerror="this.src='/images/placeholder-avatar.jpg'"
                  />
                </div>
                <div class="staff__info">
                  <h3 class="staff__name">{member.nombre} {member.apellidos}</h3>
                  <p class="staff__cargo">{member.cargo}</p>
                  <p class="staff__area">{member.area}</p>
                </div>
              </div>
              
              <p class="staff__bio">{member.bio}</p>
              
              <div class="staff__especialidades">
                <h4>Especialidades:</h4>
                <div class="especialidades-tags">
                  {member.especialidades.map((especialidad) => (
                    <span class="especialidad-tag">{especialidad}</span>
                  ))}
                </div>
              </div>
              
              <div class="staff__social">
                {member.redes.linkedin && (
                  <a href={member.redes.linkedin} class="social-link" aria-label="LinkedIn">
                    <i class="icon-linkedin"></i>
                  </a>
                )}
                {member.redes.twitter && (
                  <a href={member.redes.twitter} class="social-link" aria-label="Twitter">
                    <i class="icon-twitter"></i>
                  </a>
                )}
                {member.redes.github && (
                  <a href={member.redes.github} class="social-link" aria-label="GitHub">
                    <i class="icon-github"></i>
                  </a>
                )}
                {member.redes.instagram && (
                  <a href={member.redes.instagram} class="social-link" aria-label="Instagram">
                    <i class="icon-instagram"></i>
                  </a>
                )}
