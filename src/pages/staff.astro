<Layout title="Equipo Organizador - MTO Hackathon 2024">
  <Header currentPath="/staff" />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero__content text-center">
          <h1 class="hero__title">
