---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import Card from "../components/Card.astro";
import Logo from "../components/Logo.astro";

// Features del evento
const features = [
  {
    icon: "innovation",
    title: "Innovación",
    description:
      "Desarrolla soluciones tecnológicas que resuelvan problemas reales de la sociedad peruana.",
  },
  {
    icon: "networking",
    title: "Networking",
    description:
      "Conecta con otros desarrolladores, empresarios y profesionales del sector tech.",
  },
  {
    icon: "mentory",
    title: "Mentoría",
    description:
      "Recibe guía de expertos en la industria y líderes tecnológicos.",
  },
  {
    icon: "property",
    title: "Propiedad",
    description:
      "Tendrás los derechos sobre todo lo que desarrolles durante el evento.",
  },
  {
    icon: "experience",
    title: "Experiencia",
    description:
      "Vive una experiencia única de 48 horas de pura creatividad y desarrollo.",
  },
];
---

<Layout title="MTO Hackathon 2025 - Inicio">
  <Logo />

  <p
    class="font-secondary font-thin text-lg md:text-xl mx-auto text-center mt-4"
  >
    Construyendo un futuro tecnológico desde Perú para el mundo
  </p>

  <ul
    class="flex flex-col gap-10 py-10 mb-10 font-secondary md:flex-row md:gap-14"
  >
    <li class="flex flex-col items-center">
      <span class="text-4xl font-bold anim-counter" data-target="8">0</span>
      <div
        class="bg-gradient-to-r from-primary via-tertiary to-secondary w-1/2 h-1 rounded-full"
      >
      </div>
      <h4 class="text-xl">Equipos</h4>
    </li>
    <li class="flex flex-col items-center">
      <span class="text-4xl font-bold anim-counter" data-target="40">+0</span>
      <div
        class="bg-gradient-to-r from-primary via-tertiary to-secondary w-1/3 h-1 rounded-full"
      >
      </div>
      <h4 class="text-xl">Participantes</h4>
    </li>
    <li class="flex flex-col items-center">
      <span class="text-4xl font-bold anim-counter" data-target="48">0</span>
      <div
        class="bg-gradient-to-r from-primary via-tertiary to-secondary w-1/2 h-1 rounded-full"
      >
      </div>
      <h4 class="text-xl">Horas</h4>
    </li>
  </ul>

  <div class="relative w-full flex justify-center items-center mb-20">
    <a
      href="/projects-2025"
      class="px-2 md:px-12 py-4 bg-gradient-to-r from-primary via-secondary to-primary text-white font-bold rounded-xl shadow-xl hover:shadow-2xl transform hover:-translate-y-2 hover:scale-105 transition-all duration-300 font-primary text-lg animate-gradient bg-[length:200%_200%]"
    >
      Revisa los proyectos desarrollados
    </a>
  </div>

  <!-- About Section -->
  <section class="section">
    <div class="container mx-auto">
      <div class="text-center">
        <Title content="¿Qué es la Hackathon?" />

        <p class="mt-5 md:px-24 font-secondary font-thin text-md md:text-lg">
          Es una experiencia que abarcan 48 horas las cuales pondrás en practica
          tus habilidades como desarrollador, diseñador e incluso como
          emprendedor, es un espacio donde mentes inquietas se unen para
          transformar ideas en soluciones reales que mejoran el mundo.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="flex flex-wrap justify-center gap-5 p-3 my-16">
        {
          features.map((feature) => (
            <Card
              pathImg={`images/card-icons/${feature.icon}.png`}
              title={feature.title}
              description={feature.description}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Event Info Section -->
  <section class="section bg-primary-bg">
    <div class="container mx-auto">
      <div class="text-center">
        <Title content="Información del Evento" />

        <p class="mt-5 md:px-24 font-secondary font-thin text-md md:text-lg">
          Todo lo que necesitas saber para participar.
        </p>
      </div>

      <div
        class="group text-center max-w-md mx-auto p-6 my-16 bg-white shadow-lg rounded-2xl overflow-hidden relative transition-all duration-300 ease-in-out hover:shadow-xl"
      >
        <h3 class="font-primary font-bold text-xl md:text-2xl">
          Fecha del evento
        </h3>
        <p class="mt-5 font-secondary font-thin text-md md:text-lg">
          Del 1 al 3 de Octubre.
        </p>

        <h3 class="mt-7 font-primary font-bold text-xl md:text-2xl">
          Lugar del evento
        </h3>
        <p class="mt-5 font-secondary font-thin text-md md:text-lg">
          UTP Campus Chiclayo.
        </p>

        <h3 class="mt-7 font-primary font-bold text-xl md:text-2xl">Equipos</h3>
        <p class="mt-5 font-secondary font-thin text-md md:text-lg">
          Equipos multidisciplinarios de entre 4 a 6 estudiantes.
        </p>

        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary via-tertiary to-secondary opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>
      </div>
    </div>
  </section>
  <script>
    setTimeout(() => {
      const counters = document.querySelectorAll(".anim-counter");
      counters.forEach((counter) => {
        let count = 0;
        const format = counter.innerHTML;
        const updateCount = (format: string, target: number) => {
          if (count < target) {
            if (target - count > 10) {
              count += 5;
            } else {
              count++;
            }
            counter.innerHTML = format.replace("0", count.toString());
            setTimeout(() => updateCount(format, target), 50);
          } else {
            counter.innerHTML = format.replace("0", target.toString());
          }
        };
        updateCount(format, parseInt(counter.getAttribute("data-target")!));
      });
    }, 1000);
  </script>
</Layout>
